<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.kpl.ksportowy" name="K-Sportowy" version="0.0.4" provider-name="KPL Addons Team">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.libka"/>
        <import addon="script.module.pytz"/>
        <import addon="script.module.inputstreamhelper"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="pl">K-Sportowy</summary>
        <description lang="pl">Wtycza do odtwarzania materiałów z kanału sportowego</description>
        <platform>all</platform>
        <assets>
            <icon>resources/images/icon.png</icon>
            <fanart>resources/images/fanart.png</fanart>
            <banner>resources/images/banner.png</banner> <!-- optional -->
        </assets>
		<news></news>
    </extension>
    <reuselanguageinvoker>true</reuselanguageinvoker>
</addon>

